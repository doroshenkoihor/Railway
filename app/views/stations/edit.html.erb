<% currently_at 'Home' %>
<div class="container-sm">
  <h1 class="mb-4">Edit station</h1>
  <%= form_tag station_path(@station), method: :put do %>
    <div class="mb-3 row">
      <div class="col-sm-2 col-form-label">
        <label for = "station_name">Station name:</label>
      </div>
      <div class="col-sm-10">
        <%= text_field 'station', 'name', required: true, class: 'form-control form-control-lg' %>
      </div>
    </div>
    <%= submit_tag "Update", class: 'btn btn-primary btn-md' %>
  <% end %>
</div>